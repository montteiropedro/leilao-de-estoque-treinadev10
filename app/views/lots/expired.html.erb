<h1 class='view-title'><%= t '.expired_title' %></h1>

<section id='lots-expired' class='flex flex-col gap-4'>
  <% if @expired_lots.present? %>
    <% @expired_lots.each do |lot| %>
      <%= link_to lot_path(lot), class: 'p-4 bg-secondary hover:scale-105 transition-all rounded' do %>
        <div class='flex flex-col gap-2'>
          <span><%= t '.prefix' %> <%= lot.code %></span>
          <span class='text-xs italic'><%= lot.get_creator_description %></span>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p class='text-neutral-300'><%= t '.expired_not_found_message' %></p>
  <% end %>
</section>


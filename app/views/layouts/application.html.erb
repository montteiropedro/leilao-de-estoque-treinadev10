<!DOCTYPE html>
<html>
  <head>
    <title>StockAuctionAppTreinadev10</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="py-6 flex items-center justify-between gap-4 bg-neutral-300">
      <%= link_to root_path do %>
        <h1 class="btn-primary text-xl font-bold">Leil√£o do Estoque</h1>
      <% end %>

      <nav>
        <% if user_signed_in? %>
          <div id='user-menu'>
            <span><%= current_user.name %></span>
            <%= link_to 'Sair', destroy_user_session_path, data: { turbo_method: :delete }, class: "btn-primary" %>
          </div>
        <% else %>
          <%= link_to 'Inscrever-se', new_user_registration_path, class: "btn-primary" %>
          <%= link_to 'Entrar', new_user_session_path, class: "btn-primary" %>
        <% end %>
      </nav>
    </header>

    <main class="container m-auto py-6">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      
      <%= yield %>
    </main>
  </body>
</html>

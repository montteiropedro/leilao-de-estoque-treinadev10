<h2 class='view-title text-primary'><%= t '.sign_up' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'm-auto max-w-[562px] flex flex-col' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-field">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: t('.name_placeholder'), autofocus: true %>
  </div>

  <div class="field form-field">
    <%= f.label :cpf %>
    <%= f.number_field :cpf, placeholder: t('.cpf_placeholder') %>
  </div>

  <div class="field form-field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: t('.email_placeholder'), autocomplete: "email" %>
  </div>

  <div class="field form-field">
    <div class='flex gap-1'>
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= t '.characters_minimum', number: @minimum_password_length %>)</em>
      <% end %>
    </div>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field form-field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up_button'), class: 'form-submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
